<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                app:civ_border_color="#ff6314"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/account_name_post_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/baseline_more_horiz_24" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_post_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                app:civ_border_color="#ff6314"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/account_name_post_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="hehe"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/post_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="haha"
                android:layout_marginTop="5dp"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/like_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingRight="10dp"
                android:src="@drawable/baseline_favorite_border_24" />

            <ImageView
                android:id="@+id/comment_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingRight="10dp"
                android:src="@drawable/icons8_chat_64" />

            <ImageView
                android:id="@+id/share_post_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icons8_telegram_48" />

            <LinearLayout
                android:id="@+id/ll_save_post"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:background="@color/black"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/save_post_button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:src="@drawable/save_post" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>